.side_bar 
  .side_bar__user-name
    .top_items
      .top_items__user
        = current_user.name
      .top_items__icons
        .top_items__icons--icon
          = link_to new_group_path do 
            = icon("far", "edit")
        .top_items__icons--icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side_bar__group-list
    .group_side
      .group_side__name
        - current_user.groups.each do |group|  #横の記述は現在サインインしているユーザーが所属しているグループ
          .group_name
            = link_to group_messages_path(group) do
              .group_name__name
                = group.name
              .group_name__message
                = group.show_last_message









